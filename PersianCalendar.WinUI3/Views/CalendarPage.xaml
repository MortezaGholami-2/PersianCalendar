<Page
    x:Class="PersianCalendar.WinUI3.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:helpers="using:PersianCalendar.WinUI3.Helpers">

    <Page.Resources>
        <helpers:GregorianToPersianConverter x:Key="GregorianToPersianConverter"/>
    </Page.Resources>
    
    <Grid x:Name="ContentArea">
        <TextBlock FontSize="20" Text="{x:Bind ViewModel.CurrentDate, Converter={StaticResource GregorianToPersianConverter}, Mode=OneWay}"/>
    </Grid>
</Page>
